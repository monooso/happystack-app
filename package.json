{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "lint-fix": "php ./tools/vendor/bin/php-cs-fixer fix --config .php_cs",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "postinstall": "husky install",
        "prod": "npm run production",
        "production": "mix --production",
        "release": "bash ./scripts/deploy-to-production.sh || exit 0"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.2.1",
        "@tailwindcss/typography": "^0.3.0",
        "alpinejs": "^2.8.2",
        "autoprefixer": "^10.2.5",
        "axios": "^0.21",
        "husky": "^5.2.0",
        "laravel-mix": "^6.0.13",
        "lint-staged": "^10.5.4",
        "lodash": "^4.17.21",
        "postcss": "^8.2.8",
        "postcss-import": "^12.0.1",
        "tailwindcss": "^2.0.4"
    }
}
